<% if !flash[:notice].blank? %>
<div class="alert alert-secondary" role="alert">
<%= flash[:notice] %>
</div>
<% end %>

<h1>All Posts</h1>
<% @posts.each do |post|%>
<div class="jumbotron">
<h3><%=post.title%></h3>
<p><%=post.body%></p>
<%=link_to "Read more", post_path(post), :class => 'btn btn-primary'%>
</div>

<% end %>
