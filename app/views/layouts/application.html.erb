      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-link active" aria-current="page" >
          <%= link_to "Viewall Posts", home_path%>
        </li>
        <li class="nav-link active" aria-current="page">
       <%= link_to "Create new Post" , new_post_path%>
        </li>
        
        
      </ul>
    </div>
  </div>
</nav>
<div class="container">
    <%= yield %>
    </div>
